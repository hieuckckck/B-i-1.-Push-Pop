#include<bits/stdc++.h>
using namespace std;


int main() {
    int n;
    cin>>n;
    vector<int>a(n);
    for(int i=0;i<n;i++){
        cin>>a[i];
    }
    cout << *min_element(a.begin(), a.end())<<endl;
   cout << *max_element(a.begin(), a.end())<<endl;
   cout << accumulate(a.begin(), a.end(), 0)<<endl;
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    return 0;
}
